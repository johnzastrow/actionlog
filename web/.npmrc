# NPM configuration for ActaLog frontend

# Use exact versions when running npm install
save-exact=false

# Don't save optional dependencies
save-optional=false

# Update package-lock.json automatically
package-lock=true

# Audit level (none, low, moderate, high, critical)
audit-level=moderate

# Engine strict mode (fail if Node.js version doesn't match)
engine-strict=false

# Legacy peer dependencies (set to true if compatibility issues arise)
legacy-peer-deps=false
